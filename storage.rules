
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Only allow read access to the gallery-backgrounds folder for anyone.
    // This is temporary while auth is disabled.
    match /gallery-backgrounds/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null; // Keep writes protected
    }

    // Deny all other access to prevent unauthorized access to other files.
    match /{path=**} {
        allow read, write: if path[0] != "gallery-backgrounds" && request.auth != null;
    }
  }
}
