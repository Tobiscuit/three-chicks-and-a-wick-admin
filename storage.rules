
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Read/write for gallery backgrounds (admins signed in)
    match /gallery-backgrounds/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Write-only bucket for product prefill images (client uploads via Image Studio)
    match /prefill-product-images/{allPaths=**} {
      allow write: if request.auth != null
                   && request.resource.size < 15 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
      allow read: if false; // served via signed URLs only
    }

    // Deny everything else
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
